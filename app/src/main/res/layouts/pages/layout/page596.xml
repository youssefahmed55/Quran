<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.qurannnappp.quran.ui.pages.FragmentViewPages">

    <!-- TODO: Update blank fragment layout -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_3sdp"
        android:layout_margin="@dimen/_5sdp"
        app:cardElevation="@dimen/_3sdp"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/strock"
            android:paddingBottom="@dimen/_5sdp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id="@+id/text_1_596"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Juz 30"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="@dimen/_5sdp"
                    ></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="596"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="@dimen/_5sdp"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Al-Doha"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="@dimen/_5sdp"
                    ></TextView>

                <LinearLayout
                    android:id="@+id/linear596"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layoutDirection="rtl"
                    android:layout_alignParentRight="true"
                    app:layout_constraintTop_toBottomOf="@id/text_1_596"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_5sdp"
                    ></LinearLayout>
                <ImageView
                    android:id="@+id/image_11_596"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    app:layout_constraintTop_toBottomOf="@+id/linear596"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:src="@drawable/aldoha"
                    android:layout_marginTop="@dimen/_5sdp"
                    ></ImageView>
                <LinearLayout
                    android:id="@+id/linear596_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layoutDirection="rtl"
                    android:layout_alignParentRight="true"
                    app:layout_constraintTop_toBottomOf="@id/image_11_596"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_5sdp"
                    ></LinearLayout>
                <ImageView
                    android:id="@+id/image_11_596_2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    app:layout_constraintTop_toBottomOf="@+id/linear596_2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:src="@drawable/alsharh"
                    android:layout_marginTop="@dimen/_5sdp"
                    ></ImageView>
                <LinearLayout
                    android:id="@+id/linear596_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layoutDirection="rtl"
                    android:layout_alignParentRight="true"
                    app:layout_constraintTop_toBottomOf="@id/image_11_596_2"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_5sdp"
                    ></LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                   android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/swipebetween"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/linear596_3"
                    ></ImageView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</FrameLayout>